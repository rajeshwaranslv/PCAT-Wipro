package com.wipro.algorithms.day4;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class MyClass {

    // Method to process an array and return it as a List
    public List<Integer> method1(int[] arr) {
        List<Integer> list = new ArrayList<>();
        for (int num : arr) {
            list.add(num); // Add each element of the array to the list
        }
        return list;
    }

    public static void main(String[] args) {
        int[] arr = {3, 2, 1,0}; // Initialize the array with some values
        MyClass myClass = new MyClass();
        List<Integer> resultList = myClass.method1(arr); // Call method1 and get the result as a list
        System.out.println("Array as List: " + resultList); // Print the list
    }
}
