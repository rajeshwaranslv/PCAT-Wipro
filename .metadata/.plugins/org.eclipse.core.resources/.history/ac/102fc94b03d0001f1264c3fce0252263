package com.wipro.oops;

// Aquiring the properties of one class to another
// ISA relationship

class A{
	int a=99;
	public void disp() {
		System.out.println("Class A method");
	}
}
class B extends A{
	int b=100;
	B(){
		super();
	}
	public void disp() {
		System.out.println("Class B method");
	}
}
class C extends B{
	int c=100;
	C(){
		super();
	}
	public void disp() {
		System.out.println("Class C method");
	}
}

public class InheritanceEx {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		B b=new B();
		C c=new C();
		
		b.disp();
		c.disp();
		
		
	}

}
